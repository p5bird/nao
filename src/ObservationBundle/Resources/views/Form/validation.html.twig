	</div>
</div>

<div class="col-xs-12">
	{{ form_label(formValid.validation.comment) }}
	{{ form_errors(formValid.validation.comment) }}
	{{ form_widget(formValid.validation.comment) }}
</div>

<div class="col-xs-12 text-center submit-area">
	{{ form_widget(formValid.valid) }}
	{{ form_widget(formValid.reject) }}
	{{ form_widget(formValid.cancel) }}
	{{ form_end(formValid) }}
</div>