{% extends "UserBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Mes observations{% endblock %}

{% block content %}
	{% if observations is empty %}
		<div class="container">
			<p>Vous n'avez pas d'observation.</p>
		</div>
	{% else %}
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<h1>Mes observations</h1>
				</div>
				<div class="col-xs-12">
					<div class="table-responsive">
						<table class="table table-sm table-hover">
							<thead>
		    					<tr>
		    						<th scope="col">Statut / Observation</th>
		    						<th scope="col">Edition</th>
		    					</tr>
							</thead>
		    				<tbody>
								{% for observation in observations %}
			    					<tr>
			    						<td>
			    							{% if observation.validated %}
			    								<div class="text-success"><i class="fas fa-check-circle" title="validée"></i>
											{% else %}
												<div class="text-danger"><i class="fas fa-circle" title="non validée"></i>
			    							{% endif %}
			    							<a href="{{ path('nao_obs_edit', {'id': observation.id}) }}">
			    								{{ observation.noName ? 'non identifié' : observation.birdName }} ( {{ observation.day|date('d/m/Y') }} )
			    							</a>
			    							</div>
			    						</td>
			    						<td>
			    							<a href="{{ path('nao_obs_show', {'id': observation.id}) }}" class="text-success"><i class="fas fa-eye fa-lg" title="voir"></i></a>
			    							<a href="{{ path('nao_obs_edit', {'id': observation.id}) }}" class="text-warning"><i class="fas fa-edit fa-lg" title="modifier"></i></a>
			    							<a href="#" class="text-danger"><i class="fas fa-trash-alt fa-lg" title="supprimer"></i></a>
			    						</td>
			    					</tr>
								{% endfor %}
		    				</tbody>
		    			</table>
	    			</div>
	    		</div>
	    	</div>
	    </div>
	{% endif %}
{% endblock %}