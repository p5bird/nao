{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Observation{% endblock %}

{% block body %}
	{% if observation is null %}
		<div class="container">
			<p>Désolé, cette observation n'existe pas ou plus.</p>
		</div>
	{% else %}
		<div class="container">
			<div class="row">
				<h1>Observation n°{{ observation.id }}</h1>
				<div class="col-xs-12">
					bloc photo
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6">
			    	<div class="card">
			    		<div class="card-header">
			    			<h3>Identification</h3>
			    		</div>
			    		<div class="card-body">
			    			<table class="table table-sm">
			    				<tbody>
			    					<tr>
			    						<td>Nom de l'oiseau :</td>
			    						<td>{{ observation.taxon.nameVern }}</td>
			    					</tr>
			    					<tr>
			    						<td>Nom complet valide :</td>
			    						<td>{{ observation.taxon.nameValid }}</td>
			    					</tr>
			    					<tr>
			    						<td>Famille :</td>
			    						<td>{{ observation.taxon.family }}</td>
			    					</tr>
			    					<tr>
			    						<td>Ordre :</td>
			    						<td>{{ observation.taxon.order }}</td>
			    					</tr>
			    					<tr>
			    						<td>Classe :</td>
			    						<td>{{ observation.taxon.class }}</td>
			    					</tr>
			    					<tr>
			    						<td>Phylum :</td>
			    						<td>{{ observation.taxon.phylum }}</td>
			    					</tr>
			    					<tr>
			    						<td>Règne :</td>
			    						<td>{{ observation.taxon.reign }}</td>
			    					</tr>
			    					<tr>
			    						<td>Fiches externes :</td>
			    						<td class="" role="group"><a href="{{ observation.urlInpn }}" target="_blank" alt="fiche inpn de l'oiseau nommé {{ observation.taxon.nameVern }}" type="button" class="btn btn-default">INPN</a>
			    							<a href="{{ observation.urlWiki }}" target="_blank" alt="fiche wikipedia de l'oiseau nommé {{ observation.taxon.nameVern }}" type="button" class="btn btn-default">Wiki</a></td>
			    					</tr>
			    				</tbody>
			    			</table>
			    		</div>
			    	</div>
			    </div>
				<div class="col-xs-12 col-sm-6">
			    	<div class="card">
			    		<div class="card-header">
			    			<h3>Observation</h3>
			    		</div>
			    		<div class="card-body">
			    			<table class="table table-sm">
			    				<tbody>
			    					<tr>
			    						<td>Date :</td>
			    						<td>{{ observation.day|date("d M Y") }}</td>
			    					</tr>
			    					<tr>
			    						<td>Lieu :</td>
			    						<td>{{ observation.place }}</td>
			    					</tr>
			    					<tr>
			    						<td>Coordonnées géographiques :</td>
			    						<td>{{ observation.latitude }}, {{ observation.longitude }}</td>
			    					</tr>
			    					<tr>
			    						<td>Commentaire :</td>
			    						<td>{{ observation.comment }}</td>
			    					</tr>
			    					<tr>
			    						<td>Auteur :</td>
			    						<td><a href="{{ path('nao_show_user',{'id': observation.author.id}) }}">{{ observation.author.username }}</a></td>
			    					</tr>
			    					<tr>
			    						<td>Validé par :</td>
			    						<td>{{ observation.validationAuthor }}</td>
			    					</tr>
			    				</tbody>
			    			</table>
			    		</div>
			    	</div>
		    	</div>
		    </div> {# end row #}
		</div> {# end container #}
	{% endif %}
{% endblock %}