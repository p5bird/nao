{% extends "UserBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Editer le commentaire{% endblock %}

{% block content %}
    <div class="user-interface-page-header">
        <div class="page-name">
            Editer le commentaire
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 edit-comment-container">
                {{ form_start(form) }}

                <label>Editer le commentaire</label>
                <div class="edit-comment-content">
                    {{ form_widget(form.content) }}
                </div>

                <input type="submit" value="Valider" class="btn btn-nao"/>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}