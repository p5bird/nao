<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}NAO{% endblock %}</title>

    {% block stylesheets %}
        <!-- CSS -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
        <!-- jQuery -->
        <script src="{{ asset('js/jquery-3.2.1.min.js') }}" type="text/javascript"></script>
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
        <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
        <!-- Select 2 -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js"></script>
    {% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 no-padding">
                <div class="sidebar">
                    <ul>
                        <li>
                            <a href="{{ path('nao_dashboard') }}">
                                Tableau de bord
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('nao_list_users') }}">
                                Liste des utilisateurs
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('nao_profile') }}">
                                Mon profil
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('nao_admin') }}">
                                    Panneau administrateur
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>

            <div class="col-md-10 no-padding user-interface-right-part">
                <div class="top-bar">
                    <a href="{{ path('nao_logout') }}">Se d√©connecter</a>
                </div>
                <h1>Base interface user</h1>
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
</body>
</html>